<!DOCTYPE html>
<html>
<head>
	<title>StartupRails</title>
	<%= csrf_meta_tags %>
	<%= favicon_link_tag 'cr7.jpg' %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	<!-- Import Google Icon Font-->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<!-- Compiled and minified CSS -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
</head>

<body>

	<nav>
		<div class="nav-wrapper">
			<%= link_to 'StartupRails', root_path, class: 'brand-logo'  %>
			<a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
			<ul class="right hide-on-med-and-down">
				<li><a href="<%= videos_path %>"><i class="large material-icons">view_list</i></a></li>
				<li><a href="<%= pages_about_path %>"><i class="large material-icons">people</i></a></li>
				<li><a href="<%= pages_contact_path %>"><i class="large material-icons">place</i></a></li>
				
			</ul>
			<ul class="side-nav" id="mobile-demo">
				<li><a href="<%= videos_path %>"><i class="large material-icons">view_list</i></a></li>
				<li><a href="<%= pages_about_path %>"><i class="large material-icons">people</i></a></li>
				<li><a href="<%= pages_contact_path %>"><i class="large material-icons">place</i></a></li>
			</ul>
		</div>
	</nav>
	<div class="row">
		<div class="col m10 offset-m1">
			<%= yield %>
		</div>
	</div>

	<!--Import jQuery before materialize.js-->
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
	<!-- Compiled and minified JavaScript -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
	<script>
		$(".button-collapse").sideNav();
	</script>
</body>
</html>
